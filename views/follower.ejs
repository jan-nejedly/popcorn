<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üçø</text></svg>"
    />
    <link rel="stylesheet" href="/styles/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <header>
      <nav class="nav-bar">
        <div class="logo">
          <span role="img">üë§</span>
          <h1>Followers</h1>
        </div>
        <div></div>
        <div class="auth">
          <a href="/followers">Followers</a><a href="/users/logout">Logout</a>
          <img
            src="https://cat-avatars.vercel.app/api/cat?name=<%= currentUser.name %>"
            height="42px"
            width="42px"
            alt="<%= currentUser.name %>"
          />
        </div>
      </nav>
    </header>

    <main class="main">
      <div class="box">
        <a href="/followers" class="btn-back">x</a>
        <div class="details">
          <header>
            <img
              src="https://cat-avatars.vercel.app/api/cat?name=<%= user.name %>"
              alt="Profile picture of <%= user.name %>"
              class="avatar"
              width="139px"
              height="139px"
            />
            <div class="details-overview">
              <h2><%= user.name %></h2>
              <form
                class="follow"
                action="/followers/<%= isFollowing ? 'remove' : 'add' %>"
                method="POST"
              >
                <input type="hidden" name="userId" value="<%= currentUser.id %>" />
                <input type="hidden" name="followerId" value="<%= user.id %>" />
                <button id="submit-follow" class="btn-follow"><%= isFollowing ? '- Unfollow user' : '+ Follow user' %></button>
              </form>
            </div>
          </header>
          <section>
            <% 
            const movieDifference = myMovStatistics.movieCount - userMovStatistics.movieCount;
            const ratingDifference = (myMovStatistics.averageStars - userMovStatistics.averageStars).toFixed(1);
            %>
            <p><b><%= movieDifference > 0 ? `${user.name} is üé¨ ${movieDifference} behind you!` : `${user.name} is üé¨ ${-movieDifference} ahead!` %></b></p>
            <p><b><%= ratingDifference > 0 ? `${user.name}'s average rating is lower by ‚≠êÔ∏è ${ratingDifference}` : `${user.name}'s average rating is higher by ‚≠êÔ∏è ${-ratingDifference}` %></b></p>
          </section>
        </div>
      </div>
      <div class="box">
        <a href="/followers" class="btn-back">x</a>
        <div class="summary">
          <h2>Movies rated by <%= user.name %></h2>
          <div>
            <p><span title="Total count of movies watched by the follower">#Ô∏è‚É£</span><span><%= userMovStatistics.movieCount %></span></p>
            <p><span title="Total average of ratings awarded by the follower">‚≠êÔ∏è</span><span><%= userMovStatistics.averageStars %></span></p>
            <p><span title="Total time spent watching movies by follower">‚è≥</span><span><%= userMovStatistics.totalRuntime %> min</span></p>
            <p><span title="Total count of its followers watched the same movies like the follower">üë§</span><span><%= userFollStatistics.followersCount %></span></p>
          </div>
        </div>
        <ul class="list">
          <% for (const ratedMovie of ratedMovies) { %>
            <li>
              <img
                src="<%= ratedMovie.movie.poster %>"
                alt="<%= ratedMovie.movie.title %> poster"
              />
              <a href="/movies/<%= ratedMovie.movie.imdbID %>">
                <h3><%= ratedMovie.movie.title %></h3>
              </a>
              <div>
                <p><span title="Average rating of the movie awarded by the follower">‚≠êÔ∏è</span><span><%= ratedMovie.rating.stars %></span></p>
                <p><span title="Runtime of the movie">‚è≥</span><span><%= ratedMovie.movie.runtime %></span></p>
                <p><span title="Count of its followers watched the same movies like the follower">üë§</span><span><%= ratedMovie.followersCount %></span></p>
              </div>
            </li>
          <% } %>
        </ul>
      </div>
    </main>
  </body>
</html>
