                    <input type="radio" id="star1" name="rating" value="1"/><label for="star1" title="1 star">&#9733;</label>
                  </div>
                </div>
                <button id="submit-rating" class="btn-add">+ Add to list</button>
              </form>
            </div>
            <p>
              <em><%= movie.plot %></em>
            </p>
