<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <header>
      <nav class="nav-bar">
        <div class="logo">
          <span role="img">üë§</span>
          <h1>Followers</h1>
        </div>
        <input
          class="search"
          type="text"
          placeholder="Search people..."
          value=""
        />
        <div class="auth">
          <a href="../">Movies</a><a href="/logout">Logout</a><a>Jan</a>
        </div>
      </nav>
    </header>

    <main class="main">
      <div class="box">
        <ul class="list list-people"></ul>
      </div>
      <div class="box">
        <div class="summary">
          <h2>People you follow</h2>
          <div>
            <p><span>#Ô∏è‚É£</span><span><%= totalFollowingStats.followersCount %></span></p>
            <p><span>üé¨</span><span><%= totalFollowingStats.movieCount %></span></p>
            <p><span>‚≠êÔ∏è</span><span><%= totalFollowingStats.averageStars %></span></p>
            <p><span>‚è≥</span><span><%= totalFollowingStats.totalRuntime %> min</span></p>
          </div>
        </div>
        <ul class="list">
          <% for (const follower of followersWithStats) { %>
          <li>
            <img
              src="https://cat-avatars.vercel.app/api/cat?name=<%= follower.userName %>"
              style="margin: 8px 0"
              alt="<%= follower.userName %>"
            />
            <h3><%= follower.userName %></h3>
            <div>
              <p><span>üé¨</span><span><%= follower.movieCount %></span></p>
              <p><span>‚≠êÔ∏è</span><span><%= follower.averageStars %></span></p>
              <p><span>‚è≥</span><span><%= follower.totalRuntime %> min</span></p>
              <a href="/followers/delete/<%= follower.followingId %>" class="btn-delete">X</a>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
    </main>

    <script>
      const searchBar = document.getElementsByClassName('search')[0];
      const peopleResults = document.getElementsByClassName('list-people')[0];

      let debounceTimer;

      searchBar.addEventListener('input', () => {
        clearTimeout(debounceTimer);
        const query = searchBar.value.trim();

        if (query) {
          debounceTimer = setTimeout(() => fetchPeople(query), 300);
          return;
        }

        peopleResults.innerHTML = '';
      });

      async function fetchPeople(query) {
        try {
          const res = await fetch(`/users/search?s=${query}`);
          if (!res.ok) {
            throw new Error('Something went wrong with fetching people.');
          }
          const data = await res.json();
          console.log(data);
          if (data.Response === 'False') throw new Error('People not found');
          displayPeople(data);
        } catch (err) {
          console.error(err);
        }
      }

      function displayPeople(people) {
        if (people.length === 0) return;

        peopleResults.innerHTML = '';

        people.forEach((person) => {
          const personItem = document.createElement('li');
          personItem.innerHTML = `
            <img src="https://cat-avatars.vercel.app/api/cat?name=${person.name}" picture">
            <a href='/person/${person.id}'>
              <h3>${person.name}</h3>
            </a>
            <div>
              <p><span>üé¨</span><span>${person.movieCount}</span><span>‚≠êÔ∏è</span><span>${person.averageStars}</span><span>‚è≥</span><span>${person.totalRuntime}</span></p>
            </div>`;
          peopleResults.appendChild(personItem);
        });
      }
    </script>
  </body>
</html>
